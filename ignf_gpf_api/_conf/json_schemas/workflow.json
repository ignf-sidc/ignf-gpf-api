                                        "type",
                                        "body_parameters"
                                    ],
                                    "additionalProperties": false,
                                    "properties": {
                                        "type": {
                                            "type": "string",
                                            "enum": [
                                                "processing-execution",
                                                "configuration",
                                                "offering"
                                            ]
                                        },
                                        "url_parameters": {
                                            "type": "object"
                                        },
                                        "body_parameters": {
                                            "type": "object"
                                        },
                                        "comments": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        },
                                        "tags": {
                                            "type": "object"
                                        }
                                    }
                                }
                            },
                            "parents": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
