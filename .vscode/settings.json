{
    "cSpell.words": [
        "bbox",
        "beartype",
        "EPSG",
        "Géoplateforme",
        "geotuileur",
        "ignf",
        "insee",
        "jsonschema",
        "mkapi",
        "mkdocs",
        "mypy",
        "parsables",
        "pathes",
        "pathlib",
        "pylint",
        "pylintrc",
        "pypi",
        "pypirc",
        "rcfile",
        "recupere",
        "requêtage",
        "setuptools",
        "sharings",
        "sidc",
        "testpypi",
        "tippecanoe",
        "UNPUBLISHING",
        "venv",
        "virtualenv",
        "WMTS",
        "workdir"
    ],
    // On définit la docstring de base comme étant celle de google
    "autoDocstring.docstringFormat": "google",
    // COMMITS PROPRES
    // On ne garde qu'une et une seule ligne en fin de fichier
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    // On vire tous les espaces en fin de ligne
    "files.trimTrailingWhitespace": true,
    // Fin de ligne
    "files.eol": "\n",
    "cSpell.language": "en,fr",
    // PYTHON : formatage et linter
    "python.languageServer": "Pylance",
    "python.analysis.extraPaths": [
        ".",
    ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--strict",
        "--check-untyped-defs",
        "--show-column-numbers",
    ],
    "[python]": {
        "editor.formatOnSave": true,
    },
    "python.formatting.provider": "black",
    // ASSOCIATIONS DE FICHIERS
    "files.associations": {
        // .pylintrc est au format .ini
        ".pylintrc": "ini",
        // .flake8 est au format .ini
        ".flake8": "ini",
    },
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "*TestCase.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
}
